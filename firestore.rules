rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function getMyUserData() {
      // For Firebase Auth users, use request.auth.uid
      // For checking by email, we need to handle differently
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data 
        : null;
    }
    
    function isUserActive(userId) {
      return getUserData(userId).status == 'active';
    }
    
    function isMaster(userId) {
      return getUserData(userId).role == 'master';
    }
    
    function isAdmin(userId) {
      let role = getUserData(userId).role;
      return role == 'admin' || role == 'master';
    }
    
    function isSameCompany(userId, companyId) {
      return getUserData(userId).company_id == companyId;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Companies Collection
    match /companies/{companyId} {
      // Anyone can read companies (for invite code lookup)
      allow read: if true;
      
      // Authenticated users can create companies
      allow create: if true; // Allow anyone to create during signup
      
      // Only master of the company can update
      allow update: if resource.data.created_by == request.resource.data.created_by;
      
      // No one can delete companies
      allow delete: if false;
    }

    // Users Collection
    match /users/{userId} {
      // Anyone can read during signup/login process
      allow read: if true;
      
      // Anyone can create a user (signup)
      allow create: if true;
      
      // Users can update (for now, allow all to update for approval process)
      allow update: if true;
      
      // No deletion allowed
      allow delete: if false;
    }

    // Pending Invites Collection
    match /pendingInvites/{requestId} {
      // Allow read for all authenticated users
      allow read: if true;
      
      // Anyone can create a pending invite (signup process)
      allow create: if true;
      
      // Allow updates for approval process
      allow update: if true;
      
      // No deletion
      allow delete: if false;
    }

    // Shifts Collection
    match /shifts/{shiftId} {
      // Allow read for authenticated users (we'll add company filtering in app logic)
      allow read: if true;
      
      // Allow create for authenticated users
      allow create: if true;
      
      // Allow update
      allow update: if true;
      
      // Allow delete
      allow delete: if true;
    }

    // Archives Collection
    match /archives/{archiveId} {
      // Allow read
      allow read: if true;
      
      // Allow create
      allow create: if true;
      
      // Allow update
      allow update: if true;
      
      // Allow delete
      allow delete: if true;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
